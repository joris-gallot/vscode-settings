{
  "window": {
    "zoomLevel": 0.5,
    "systemColorTheme": "auto",
    "autoDetectColorScheme": true
  },
  "editor": {
    "stickyScroll": {
      "enabled": true
    },
    "formatOnSave": true,
    "tabSize": 2,
    "fontSize": 14,
    "fontFamily": "Monaspace Neon",
    "codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.formatDocument": "never",
      "source.organizeImports": "never",
    }
  },
  "workbench": {
    "preferredLightColorTheme": "GitHub Light",
    "preferredDarkColorTheme": "GitHub Dark Default",
    "sideBar": {
      "location": "right"
    },
    "panel": {
      "defaultLocation": "right"
    },
    "iconTheme": "material-icon-theme"
  },
  "github": {
    "copilot": {
      "nextEditSuggestions": {
        "enabled": true
      }
    }
  },
  "git": {
    "useForcePushWithLease": true,
    "allowForcePush": true,
    "useForcePushIfIncludes": true,
    "autofetch": true,
    "enableSmartCommit": true,
    "confirmForcePush": false
  },
  "explorer": {
    "confirmDelete": false,
    "confirmDragAndDrop": false
  },
  "terminal": {
    "integrated": {
      "fontSize": 14
    }
  }
}
